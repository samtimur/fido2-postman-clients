					"listen": "test",
					"script": {
						"exec": [
							"eval(globals.fidoutils);",
							"",
							"var jsonData = pm.response.json();",
							"",
							"pm.test(\"Status ok\", function() {",
							"    pm.expect(jsonData.status).to.eql(\"ok\");",
							"    var cco = attestationOptionsResponeToCredentialCreationOptions(jsonData);",
